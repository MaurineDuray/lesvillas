<div class="card">
                <div class="card-title">
                    <p>
                        {% if app.request.locale == "en" %}
                            {{immo.titreEn}}
                        {% else %}
                            {{immo.titre}}
                        {% endif %}
                    </p>
                </div>
                <div class="card-img">
                    <img src="../../upload/{{immo.cover}}" alt="image du logement {{immo.titre}}">
                </div>
                <div class="card-caract"> 
                    <p>
                    {% if app.request.locale == "en" %}
                        {{immo.travellers}} travellers  -  {{immo.bedrooms}} room(s)
                    {% else %}
                        {{immo.travellers}} voyageurs  -  {{immo.bedrooms}} chambre(s)
                    {% endif %} 
                    </p>
                </div>
                <div class="card-price">
                    <p>
                    {% if app.request.locale == "en" %}
                        Starting at {{immo.priceEn}}$/night
                    {% else %}
                        À partir de {{immo.price}}€/nuit
                    {% endif %}
                    </p>
                </div><br>
                <div class="card-btn">
                    <a href="{{path('logement',{'slug':immo.slug})}}"><button>{% trans %}More information{% endtrans %}</button></a>
                </div>
            </div>