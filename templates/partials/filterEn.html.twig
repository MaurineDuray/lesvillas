<form class="filter" action="{{path('sort')}}">
    <div class="form-group">
        <select name="conciergerie" id="conciergerie">
            <option value="Your destination" disabled selected>{% trans %}Destination{% endtrans %}</option>
             <optgroup label="Côte d'Azur">
                <option value="Saint-Raphaël">Saint-Raphaël</option>
                <option value="Fréjus">Fréjus</option>
                <option value="Boulouris">Boulouris</option>
                <option value="Agay">Agay</option>
                <option value="Antheor">Antheor</option>
            </optgroup>
            <optgroup label="Floride">
                <option value="Miami Beach">Miami Beach</option>
                <option value="Coconut">Coconut</option>
                <option value="North Miami">North Miami</option>
                <option value="South Miami">South Miami</option>
                <option value="Downtown">Downtown</option>
                <option value="Midtown">Midtown</option>
                <option value="Brickell">Brickell</option>
            </optgroup>
        </select>
    </div>
    <div class="form-group">
        <select name="housetype" id="housetype" name="housetype">
            <option value="" disabled selected>{% trans %}Type of housing{% endtrans %}</option>
            <option value="Appartement">{% trans %}Flat{% endtrans %}</option>
            <option value="Villa">Villa</option>
            <option value="Maison">House</option>
            <option value="Autres">Other</option>
        </select>
    </div>
    <div class="from-group">
        <input id="travellers" name="travellers" type="number" placeholder="Number of travellers" min="0" >
    </div>
    <div class="form-group">
        <input id="rooms" name="rooms" type="number" placeholder="Number of bedrooms" min="0" >
    </div>
    
    <input type="submit" class="btn" value="Filter" id="filterBtn">

</form>