<form class="filter" action="{{path('sort')}}">
    <div class="form-group">
        <select name="type" id="type" name="type">
            <option value="" disabled selected>{% trans %}Type of housing{% endtrans %}</option>
            <option value="appartement">{% trans %}Flat{% endtrans %}</option>
            <option value="villa">Villa</option>
            <option value="maison">House</option>
            <option value="autre">Other</option>
        </select>
    </div>
    <div class="from-group">
        <input id="travellers" name="travellers" type="number" placeholder="Number of travellers">
    </div>
    <div class="form-group">
        <input id="rooms" name="rooms" type="number" placeholder="Number of bedrooms">
    </div>
    <div class="form-group">
        <input id="maxprice" name="maxprice" type="number" placeholder="Price">
    </div>
    <input type="submit" class="btn" value="Filter" id="filterBtn">

</form>