{% extends 'base.html.twig' %}

{% block title %}Villas Blue{% endblock %}

{% block body %}
    <div class="slide" id="introGalery">
         <img id="intro-logo" src="{{asset('images/logo-03.png')}}" alt="Logo">
        <div class="sep">
            <img src="{{asset('images/separation-bottom.png')}}" alt="separation">
        </div>
    </div>
    <div class="slide" id="dasboardTitle">
        <h3 class="script"> Boujour {{app.user.firstName}},</h3>
        <h2>Bienvenue dans le tableau de bord !</h2>
        <a href="{{path('admin')}}">Retour au tableau de bord</a>
        
        
    </div>
   <div class="tableau">
   <h1 style="text-align: center">Gestion des contacts</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Contact</th>
                <th>Téléphone</th>
                <th>Email</th>
                <th>Message</th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{contact.id}}</td>
                    <td>{{contact.name}}</td>
                    <td>{{contact.phone}}</td>
                    <td>{{contact.email}}</td>
                    <td><a href="{{path('admin_contacts_message',{'id': contact.id})}}">Voir le message</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
   </div>
    </div>
    {% include "partials/footer.html.twig" %}
{% endblock %}
