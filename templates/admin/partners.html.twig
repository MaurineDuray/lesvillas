{% extends 'base.html.twig' %}

{% block title %}Villas Blue{% endblock %}

{% block body %}
    <div class="slide" id="introGalery">
         <img id="intro-logo" src="{{asset('images/logo-03.png')}}" alt="Logo">
        <div class="sep">
            <img src="{{asset('images/separation-bottom.png')}}" alt="separation">
        </div>
    </div>
    <div class="slide" id="dasboardTitle">
        <h3 class="script"> Boujour {{app.user.firstName}},</h3>
        <h2>Bienvenue dans le tableau de bord !</h2>
        <a href="{{path('admin')}}">Retour au tableau de bord</a>
        <div class="addBtn">
            <a href="{{path('admin_partners_add')}}" class="addButtons"><button>Ajouter un partenaire</button></a>
        </div>
        
    </div>
   <div class="tableau">
   <h1 style="text-align: center">Gestion des partenaires</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Partenaires</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for partner in partners %}
                <tr>
                    <td>{{partner.id}}</td>
                    <td>{{partner.name}}</td>
                    <td class="actions">
                        <a href="{{path('admin_partner_delete',{'id': partner.id})}}" class="btn-red" ><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
   </div>
    </div>
    {% include "partials/footer.html.twig" %}
{% endblock %}
