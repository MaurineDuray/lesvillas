{% extends 'base.html.twig' %}

{% block title %}Villas Blue{% endblock %}

{% block body %}
    <div class="slide" id="introGalery">
         <img id="intro-logo" src="{{asset('images/logo-03.png')}}" alt="Logo">
        <div class="sep">
            <img src="{{asset('images/separation-bottom.png')}}" alt="separation">
        </div>
    </div>
    <div class="slide" id="dasboardTitle">
        <h3 class="script"> Boujour {{app.user.firstName}},</h3>
        <h2>Bienvenue dans le tableau de bord !</h2>
        <a href="{{path('admin')}}">Retour au tableau de bord</a>
        
        
    </div>
   <div class="tableau">
   <h1 style="text-align: center">Gestion des demandes de réservation</h1>
   
    <div class="message" style="display: flex; justify-content:center; flex-wrap: wrap">

     <p style='width: 100%; text-align:center'>Bien concerné : {{reservation.immoId.id}} - {{reservation.immoId.Titre}}</p>
      <p style='width: 100%; text-align:center'>Date d'arrivée : {{reservation.arrival |date("m/d/Y") }}</p>
       <p style='width: 100%; text-align:center'>Date de départ : {{reservation.departure |date("m/d/Y") }}</p>
    <p style='width: 100%; text-align:center'>Nom : {{reservation.name}}</p>
    <p style='width: 100%; text-align:center'>Mail : {{reservation.email}}</p>
    <p style='width: 100%; text-align:center'>Téléphone : {{reservation.phone}}</p>
   
    <p style='width: 100%; text-align:center'>Message :</p>
    <p style='width: 100%; text-align:center'>
        {{reservation.message}}
    </p>
    <a style="margin-top: 20px" href="{{path('admin_reservation_delete', {'id':reservation.id})}}"><button>Supprimer la réservation</button></a>
   </div> 
   </div>
    </div>
