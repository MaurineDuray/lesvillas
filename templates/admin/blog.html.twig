{% extends 'base.html.twig' %}

{% block title %}Villas Blue{% endblock %}

{% block body %}
    <div class="slide" id="introGalery">
         <img id="intro-logo" src="{{asset('images/logo-03.png')}}" alt="Logo">
        <div class="sep">
            <img src="{{asset('images/separation-bottom.png')}}" alt="separation">
        </div>
    </div>
    <div class="slide" id="dasboardTitle">
        <h3 class="script"> Boujour {{app.user.firstName}},</h3>
        <h2>Bienvenue dans le tableau de bord !</h2>
        <a href="{{path('admin')}}">Retour au tableau de bord</a>
        <div class="addBtn">
            <a href="{{path('admin_blog_add')}}" id="addButtons"><button>Ajouter un article</button></a>
        </div>
    </div>
   <div class="tableau">
   <h1 style="text-align: center">Gestion du blog</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre de l'article</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for blog in blogs %}
                <tr>
                    <td>{{blog.id}}</td>
                    <td><a href="{{path('showarticle',{'id': blog.id})}}">{{blog.titleFr}}</a></td>
                    <td class="actions">
                        <a href="{{path('admin_blog_edit',{'id': blog.id})}}" class="btn-yellow"><i class="fas fa-edit"></i></a>
                        <a href="{{path('admin_blog_delete',{'id':blog.id})}}" class="btn-red" ><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
   </div>
    </div>
    {% include "partials/footer.html.twig" %}
{% endblock %}
