{% extends 'base.html.twig' %}

{% block title %}Villas Blue{% endblock %}

{% block body %}
    <div class="slide" id="introGalery">
         <img id="intro-logo" src="{{asset('images/logo-03.png')}}" alt="Logo">
        <div class="sep">
            <img src="{{asset('images/separation-bottom.png')}}" alt="separation">
        </div>
    </div>
    <div class="slide" id="dasboardTitle">
        <h3 class="script"> Boujour {{app.user.firstName}},</h3>
        <h2>Bienvenue dans le tableau de bord !</h2>
        <a href="{{path('admin')}}">Retour au tableau de bord</a>
    </div>
   <div class="tableau">
   <h1 style="text-align: center">Gestion des contacts - Message</h1>
   
    <div class="message" style="display: flex; justify-content:center; flex-wrap: wrap">
    <p style='width: 100%; text-align:center'>Nom : {{message.name}}</p>
    <p style='width: 100%; text-align:center'>Mail : {{message.email}}</p>
    <p style='width: 100%; text-align:center'>Téléphone : {{message.phone}}</p>
    <p style='width: 100%; text-align:center'>Message :</p>
    <p style='width: 100%; text-align:center'>
        {{message.message}}
    </p>
    <a style="margin-top: 20px" href="{{path('admin_contacts_delete', {'id':message.id})}}"><button>Supprimer le message</button></a>
   </div> 
   </div>
    </div>
    {% include "partials/footer.html.twig" %}
{% endblock %}
